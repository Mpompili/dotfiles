URxvt.font: xft:DejaVuSansMono Nerd Font:size=10
URxvt.cursorBlink  :0

URxvt.lineSpace           : 0
URxvt.letterSpace         : -0.2
URxvt.scrollBar           : false
URxvt.internalBorder      : 20
URxvt.cursorUnderline     : false
URxvt.geometry            : 70x35
URxvt.thickness           : 5
URxvt.titleBar            : false
URxvt.intensityStyles     : false

! Disable this mode for control-shift keybindings
URxvt.iso14755: false

URxvt*perl-ext-common : default,matcher,selection-to-clipboard

URxvt.url-launcher    : chromium-browser
URxvt.matcher.button  : 1

! copy-pasting
URxvt.keysym.Control-Shift-V:     perl:pasta:paste
URxvt.clipboard.autocopy: true

URxvt.transparent:   false
URxvt.shading:       5

Xautolock.corners     : 00+0
Xautolock.locker      : ~/.config/i3/lock
Xautolock.time        : 15
Xautolock.cornerdelay : 1
Xautolock.detectsleeptrue: 1
